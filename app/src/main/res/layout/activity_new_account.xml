<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/backGround">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".NewAccountActivity">

    <TextView
      android:id="@+id/user_id_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:layout_marginVertical="30dp"
      android:text="" />

    <EditText
      android:id="@+id/userId"
      style="@android:style/Widget.EditText"
      android:layout_width="match_parent"
      android:layout_height="64sp"
      android:layout_marginHorizontal="35dp"
      android:layout_marginBottom="32sp"
      android:backgroundTint="@color/colorPrimary"
      android:ems="15"
      android:hint="@string/customer_id"
      android:importantForAutofill="no"
      android:inputType="number"
      android:textColor="@color/black" />

    <TextView
      android:id="@+id/confirmation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="70dp"
      android:layout_marginBottom="20dp"
      android:text="" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:gravity="center">

      <Button
        android:id="@+id/action_make_account"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="150dp"
        android:layout_height="@dimen/btn_height"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/make_account"
        android:textColor="@color/btnTextColor"
        app:icon="@drawable/account" />

      <Button
        android:id="@+id/exit_btn"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="150dp"
        android:layout_height="@dimen/btn_height"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/exit"
        android:textColor="@color/btnTextColor"
        app:icon="@drawable/exit" />

    </LinearLayout>

  </LinearLayout>
</ScrollView>